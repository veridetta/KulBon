<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:background="@color/green_400"
                        android:alpha="0.9"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:background="@color/grey_600"
                        android:alpha="0.4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_25sdp"
                                    android:background="@color/white"
                                    app:cardBackgroundColor="@color/white"
                                    android:layout_marginTop="@dimen/_14sdp"
                                    app:cardElevation="@dimen/_8sdp"
                                    app:cardMaxElevation="@dimen/_10sdp"
                                    app:cardCornerRadius="@dimen/_9sdp"
                                    app:cardUseCompatPadding="true"
                                    android:padding="@dimen/_10sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:paddingTop="@dimen/_20sdp"
                                        android:paddingBottom="@dimen/_20sdp">
                                        <TextView
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Cari Makanan"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:gravity="center"/>
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_height="wrap_content"
                                            android:background="@color/white"
                                            app:hintTextColor="@color/purple_500"
                                            android:textColorHint="@color/purple_500"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                            <SearchView
                                                android:id="@+id/cari_input"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:iconifiedByDefault="false"
                                                android:inputType="text"
                                                android:textColor="@color/purple_500"
                                                android:textColorHint="@color/purple_500"
                                                android:maxLines="1" />
                                        </com.google.android.material.textfield.TextInputLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Clik to open profile"
                                    android:textColor="@color/grey_200"
                                    android:layout_marginBottom="@dimen/_4sdp"/>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/i_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="@dimen/_150sdp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:backgroundTintMode="multiply"
                                            android:backgroundTint="@color/blue_A400"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:background="@drawable/user"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_15sdp"
                            android:clipToPadding="false"
                            android:visibility="visible"
                            android:id="@+id/rc_home"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/_550sdp">
                    <TextView
                        android:id="@+id/coba"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_20sdp"
                        android:text="Belum ada data"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>